<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Khoản Thu"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/ed_themidloaithu"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:hint="Nhập id loại thu"
        android:background="@drawable/edittext"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/ed_themkhoanthu"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:hint="Nhập tên khoản thu"
        android:background="@drawable/edittext"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/ed_themngaythu"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:hint="Nhập ngày thu"
        android:background="@drawable/edittext"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/ed_themsotienthu"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:hint="Nhập số thu"
        android:background="@drawable/edittext"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/ed_themghichuthu"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:hint="Nhập ghi thu"
        android:background="@drawable/edittext"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/ed_themnguoithu"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:hint="Nhập tên người thu"
        android:background="@drawable/edittext"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_themkhoanthu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:textAllCaps="false"
            android:backgroundTint="#009688"
            android:layout_gravity="left"
            android:textSize="20sp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_themcancel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            android:backgroundTint="#009688"
            android:layout_gravity="right"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
    </LinearLayout>

</LinearLayout>