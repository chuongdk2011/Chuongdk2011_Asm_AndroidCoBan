<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tv_tenkhoanchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF2727"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Tên:"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tv_ngaychi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày:"
            android:textColor="#FF2727"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toRightOf="@id/tv_tenkhoanchi"
            app:layout_constraintTop_toTopOf="@id/tv_tenkhoanchi"/>

        <TextView
            android:id="@+id/tv_sotienchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tiền:"
            android:textColor="#FF2727"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_tenkhoanchi"
            app:layout_constraintLeft_toLeftOf="@id/tv_tenkhoanchi"/>
        <TextView
            android:id="@+id/tv_ghichuchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú:"
            android:textColor="#FF2727"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_sotienchi"
            app:layout_constraintLeft_toLeftOf="@id/tv_sotienchi"/>
        <TextView
            android:id="@+id/tv_nguoichi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người chi:"
            android:textColor="#FF2727"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_ghichuchi"
            app:layout_constraintLeft_toLeftOf="@id/tv_ghichuchi"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>